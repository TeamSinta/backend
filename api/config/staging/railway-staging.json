{
	"$schema": "https://schema.up.railway.app/railway.schema.json",
	"build": {
		"builder": "NIXPACKS",
		"nixpacksPlan": {
			"phases": {
				"setup": {
					"nixPkgs": ["...", "ffmpeg", "wkhtmltopdf", "libfontconfig"],
					"cmds": [
						"...",
						"sudo apt-get -y update && sudo apt-get install -y ffmpeg && sudo apt-get install -y wkhtmltopdf && sudo apt-get install -y libfontconfig"
					]
				}
			}
		},
		"buildCommand": "poetry install"
	},
	"deploy": {
		"startCommand": "bash scripts/prod-start.sh",
		"restartPolicyType": "NEVER",
		"restartPolicyMaxRetries": 10
	}
}
